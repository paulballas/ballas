    block css
      link(rel='stylesheet', href='/css/app.css')
    block js
      if ENV_DEVELOPMENT
        script(src='http://localhost:35729/livereload.js')
  body
    block hero
      .header
        .container
          .row
            .col-xs-12
              p header

    block content
    block footer
      .footer.blue-bg
        .container.dark-bg
          .row
            .col-xs-12
              p footer!
    block scripts
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js')
