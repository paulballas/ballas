-var title = 'Paul Ballas'

block settings
  - var slug = 'unknown'
  - var page = 'Unknown'

doctype html
html(lang='en' class = "#{slug}" data-page='#{page}' )
  head
    meta(charset='UTF-8')
    meta( content="width=device-width, user-scalable=no", name="viewport" )
    meta( name="description", content="Bellwether coffee")

    meta( property="og:title", content="Paul Ballas" )
    meta( property="og:type", content="website" )
    meta( property="og:url", content="https://www.ballas.io" )
    meta( property="og:description", content="Designer + Cycler" )
